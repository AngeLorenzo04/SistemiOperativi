{
	"LASCO":{
		"prefix": "lasco",
		"body": [
			"#Controllo comandi LASCO",
			"if test $# -lt $1",
			"then",
			"   echo ERRORE: numero parametri non valido",
			"   echo SUGGERIMENTO: inserire almeno $1 parametri",
			"   exit $2",
			"fi"
		]
	},
	"STRETTO":{
		"prefix": "stretto",
		"body": [
			"#Controllo comandi STRETTO",
			"if test $# -ne $1",
			"then",
			"   echo ERRORE: numero parametri non valido",
			"   echo SUGGERIMENTO: inserire esattamente $1 parametri",
			"   exit $2",
			"fi"
		]
	},
	"NUMERICO":{
		"prefix": "num",
		"body": [
			"#Controllo che il $1 parametro sia un numero intero",
			"N=`expr $2 + 1`",
			"if test $? -ne 0",
			"then" ,
			"    echo ERRORE: Il parametro $2 non è valido",
			"    echo SUGGERIMETNO: Inserire un valore numerico",
			"    exit $3",
			"fi"
		]
	},
	"PERCORSI ASSOLUTI DIR": {
		"prefix": "absolute",
		"body": [

			"#Controllo che gli altri parametri siano dei percorsi",
			"percorsi=",
			"for i", 
			"do", 
			"    case \\$i in",
			"    */*)",
			"        if test ! -d \\$i -o ! -x \\$i",
			"        then",
			"           echo ERRORE: il parametro \\$i non è valido",
			"           echo SUGGERIMENTO: inserire una directory traversabile in forma assoluta",
			"            exit $1",
			"        fi",
			"        percorsi=\"\\$percorsi \\$i\"",
			"        ;;",
			"    *)",
			"        echo ERRORE: il parametro \\$i non è valido",
			"        echo SUGGERIMENTO: inserire una directory traversabile in forma assoluta",
			"        exit $2",
			"        ;;",
			"    esac",
			"done"
		]
	},
	"PATH":{
		"prefix": "path",
		"body": [
			"#Aggiorno la variabile ambiente PATH",
			"PATH=`pwd`:\\$PATH",
			"export PATH"
		]
	},
	"INVOCAZIONE ITERATIVA FCR":{
		"prefix": "iterativ",
		"body": [
			"#Invocazione iterativa del file comandi ricorsivo",
			"for G in \\$percorsi",
			"do",
			"    FCR.sh \\$G \\$X 0 \\$tmp",
			"done"
		]
	},
	"STAMPA FINALE":{
		"prefix": "end",
		"body": [
			"NOCC=`wc -l  < \\$tmp`",
			"",
			"echo SONO STATE TROVATE \\$NOCC OCCORRENZE...",
			"if test ! \\$NOCC -eq 0",
			"then",
			"    echo ======================",
			"    cat \\$tmp",
			"    echo ======================",
			"fi",
			"",
			"rm \\$tmp"
		]
	},
	"INVOCAZIONE RICORSIVA FCR":{
		"prefix": "recursiv",
		"body": [
			"#Chiamata ricorsiva del file FCR.sh",
			"for i in *",
			"do" ,
			"   if test -d \\$i -a -x \\$i",
			"   then",
			"      \\$0 `pwd`/\\$i \\$X \\$turn \\$tmp",
			"   fi",
			"done"
		]
	}
}